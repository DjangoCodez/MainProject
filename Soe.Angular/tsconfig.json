{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "noImplicitAny": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6",
      "es2016"
    ],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./custom_typings/",
      "./node_modules/@types/"
    ],
    "outDir": "./build/"
  },
  "include": [
    "TypeScript/**/*.ts"
  ]
}
