{
   "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "types": [
         "node",
         "playwright"
      ],
      "outDir": "./dist"
   },
   "include": [
      "pages/**/*.ts",
      "tests/**/*.ts",
      "src/**/*.ts",
      "*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}